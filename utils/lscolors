#!/bin/bash -e

colornames=(
    default
    red
    green
    yellow
    blue
    magenta
    cyan
    white
    )

printcol() {
    printf "%-12s" "$1"
}

# print header
header=$( printcol Number ; \
        printcol Color ; \
        printcol \ FG ; \
        printcol \ BG ; \
        printcol \ Bold )
echo "$header"
echo "$header" | sed 's/./â”€/g'
for i in "${!colornames[@]}" ; do
    name=${colornames[$i]}
    printcol "$i"
    printcol "$name"
    echo -n -e "\e[0m\e[3${i}m$(printcol \ $name)\e[0m"
    echo -n -e "\e[0m\e[4${i}m$(printcol \ $name)\e[0m"
    echo -n -e "\e[1m\e[3${i}m$(printcol \ $name)\e[0m"
    echo
    printcol ""
    printcol ""
    echo -n -e "\e[0;3${i}m"
    printcol " \\e[0;3${i}m"
    echo -n -e "\e[0m"
    echo -n -e "\e[0;4${i}m"
    printcol " \\e[0;4${i}m"
    echo -n -e "\e[0m"
    echo -n -e "\e[1;3${i}m"
    printcol " \\e[1;3${i}m"
    echo -n -e "\e[0m"
    echo
done
